<%- include("../layout/header"); %>
<%- include("../layout/sidebar"); %>

<section class="content">
        <div class="container-fluid">
            <div class="block-header">
                
            </div>
            
            <!-- Exportable Table -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                               <%= type %> Banner List
                            </h2>
                            
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped table-condensed table-hover dataTable js-exportable ">
                                    <thead>
                                        <tr>
                                            <th>Sr. No.</th>
                                            <% if(type=='Promo'){ %>
                                            <th>Promo Logo</th>
                                            <% } %>
                                            <th>Image</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Sr. No.</th>
                                            <% if(type=='Promo'){ %>
                                            <th>Promo Logo</th>
                                            <% } %>
                                            <th>Image</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <% var i=1;data.forEach(function(datas){ %>
                                            <tr>
                                                <td style="width:100px"><%= i %></td>
                                                <% if(type=='Promo'){ %>
                                                <td style="width:100px"><img src="<%= datas.promo_logo %>" height="100px" width="100px"></td>
                                                <% } %>
                                                <td style="width:100px"><img src="<%= datas.image %>" height="100px" width="100px"></td>
                                                <td style="width:100px"><%= datas.active_status %></td>
                                                <td style="width:100px"><a href="/prodsite/delete/banners/<%= datas.id %>/<%= type %>" onclick="return confirm('Are You sure');"><button class="btn btn-danger">Delete</button></a></td>
                                            </tr>
                                        <% i++;}); %>
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Exportable Table -->
        </div>
    </section>
<%- include("../layout/datatable"); %>
